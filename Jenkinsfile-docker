pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                git(url: 'https://github.com/salvadiaz/spring-boot-IS3.git', branch: 'main', poll: true)
                sh "docker build -t salvadiazpesci/spring-boot:${env.BUILD_ID} ."
            }
        }
        stage('Push image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-credential', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "docker login -u $USER -p $PASS"
                    sh "docker push salvadiazpesci/spring-boot:${env.BUILD_ID}"
                }
            }
        }
    }
}
